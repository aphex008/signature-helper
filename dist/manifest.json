{
  "name": "Signature Helper Extension",
  "description": "This extension helps to autofill https://www.epaslaugos.lt/adoc/signer",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://www.epaslaugos.lt/adoc/signer/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
